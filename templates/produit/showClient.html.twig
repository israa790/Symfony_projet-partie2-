{% extends 'baseClient.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
         <tr>
                <th>Image</th>
                <td><img src="{{ produit.image }}"  width="300" height="300"/></td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>NomProd</th>
                <td>{{ produit.nomProd }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
           
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
        </tbody>
    
    
   <a href="{{ path('cart_add',{'id':produit.id }) }}"  class="btn btn-success">Ajouter</a>
    <a href="{{ path('produit_vue') }}" class="btn btn-primary">Retour</a>
</table>

{% endblock %}
